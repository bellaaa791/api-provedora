const fetch = require('node-fetch');

async function tiktokSearch(query) {
  return new Promise(async (resolve, reject) => {
    try {
      const response = await fetch("https://tikwm.com/api/feed/search", {
        method: "POST",
        headers: {
          "Content-Type": "application/x-www-form-urlencoded; charset=UTF-8",
          Cookie: "current_language=en",
          "User-Agent":
            "Mozilla/5.0 (Linux Android 10 K) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/116.0.0.0 Mobile Safari/537.36",
        },
        body: new URLSearchParams({
          keywords: query,
          count: 10,
          cursor: 0,
          HD: 1,
        }),
      }).then((v) => v.json());

      if (response && response.data && response.data.videos && response.data.videos.length > 0) {
        const videos = response.data.videos.map((v) => ({
          title: v.title,
          cover: v.cover,
          origin_cover: v.origin_cover,
          link: `https://www.tiktok.com/@${v.author.unique_id}/video/${v.video_id}`,
          no_watermark: v.play,
          watermark: v.wmplay,
          music: v.music_info,
          views: v.play_count,
          like: v.digg_count,
          comment: v.comment_count || null,
          share: v.share_count,
          download: v.download_count || null,
          save: v.collect_count || null,
          create_time: v.create_time * 1000,
        }));
        resolve(videos);
      } else {
        reject("Nenhum v√≠deo encontrado para esta busca.");
      }
    } catch (error) {
      reject(error);
    }
  });
}

module.exports = { tiktokSearch };

